<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_task_form_inherited" model="ir.ui.view">
            <field name="name">task.form.inherit</field>
            <field name="model">project.task</field>
            <field name="inherit_id" ref="project.view_task_form2"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='date_deadline']" position="attributes" >
                   <attribute name="attrs">
                            {'invisible':1}
                   </attribute>
                </xpath>
                <xpath expr="//field[@name='partner_id']" position="attributes" >
                   <attribute name="attrs">{'invisible':1}</attribute>
                </xpath>
                <xpath expr="//field[@name='user_ids']" position="after">
					<field name="requested_by" widget="many2many_tags" />
				</xpath>

                 <xpath expr="//page[@name='extra_info']" position="after" >
                        <page name="assessments" string="Assessments" >
                            <group>
                                <group>
                                    <field name="speed" />
                                    <field name="quality" />
                                    <field  name="no_repeated_errors"/>
                                    </group>
                            </group>
                        </page>
                </xpath>
            </field>
        </record>
    </data>
</odoo>